<Window x:Class="EKS.FullClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EKS.FullClient.Views"
        mc:Ignorable="d"
        Height="576" Width="1024" Title="Elektroniczna Książka Serwisowa"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource ViewModelLocator}}">
    
    <Window.Background>
        <ImageBrush ImageSource="/images/BackgroundStart.jpg"/>
    </Window.Background>
 
    <ContentControl Content="{Binding CurrentControl}"/>
    
</Window>
